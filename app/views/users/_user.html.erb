<div id="role-options-<%= user.id %>" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Modificar Permissão</h4>
      </div>
      <div class="modal-body">
        <div class="panel-body">
            <%= simple_form_for user, :url => user_path(user),
                                :html => {:method => :put,
                                          :class => 'form-horizontal' } do |f| %>
                <%= f.input :role_ids, :collection => Role.all,
                            :as => :radio_buttons, :label_method => lambda {|t| t.name.titleize},
                            :label => false, :item_wrapper_class => 'block', checked: user.role_ids.first %>
            <p class="text-warning"><small>Selecione uma permissão acima.</small></p>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Salvar", :type => "submit", :class => "btn btn-primary" %>
      <% end %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>