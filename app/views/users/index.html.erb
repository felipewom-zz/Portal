<table class="table table-striped table-bordered table-hover" id="dataTables">
  <thead>
    <tr>
      <th>Nome</th>
      <!--<th>Sobrenome</th>-->
      <th>Login</th>
      <th>Email</th>
      <th>Permissão</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name.titleize, user %></td>
      <!--<td><% user.last_name %></td>-->
      <td><%= user.login %></td>
      <td><%= user.email %></td>
      <td><%= user.roles[0].name.titleize unless user.roles.blank? %></td>
      <td><%= link_to '<i class="fa fa-eye fa-fw"></i>'.html_safe, user%>
        <a data-toggle="modal" href="#role-options-<%= user.id %>" type="button"><i class="fa fa-edit fa-fw"></i></a>
        <%= render user %>
        <%= link_to('<i class="fa fa-trash-o fa-fw"></i>'.html_safe, user_path(user), :data => { :confirm => "Tem certeza?" }, :method => :delete) unless user == current_user %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= data_tables %>
